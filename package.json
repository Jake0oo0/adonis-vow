{
  "name": "@adonisjs/vow",
  "version": "1.0.14",
  "description": "Test runner for Adonis framework with batteries included ðŸ”‹",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "standard": {
    "globals": [
      "use"
    ]
  },
  "keywords": [],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/ace": "^5.0.0",
    "@adonisjs/fold": "^4.0.5",
    "@adonisjs/sink": "^1.0.13",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^5.0.0",
    "japa-cli": "^1.0.1",
    "nyc": "^11.4.1",
    "semver": "^5.5.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "chai-subset": "^1.6.0",
    "debug": "^3.1.0",
    "globby": "^7.1.1",
    "japa": "^1.0.6",
    "lodash": "^4.17.5",
    "macroable": "^1.0.0",
    "node-cookie": "^2.1.0",
    "p-series": "^1.0.0",
    "superagent": "^3.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "providers",
      "bin",
      "test",
      "commands/RunTests.js"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-vow.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-vow/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-vow#readme"
}
